<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <!-- NAVBAR: Home - Logout - Profile -->
    <%- include('./partials/navbar') %>
        <br>
        <br>
        <!-- SEARCH -->
        <div class="container mt-5 mb-5">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="d-flex justify-content-between p-2 px-3">
                            <div class="row d-flex align-items-center justify-content-center">

                                <div>
                                    <!-- TAGS -->
                                    <form action="/user" method="get">
                                        <input type="button" name="name" value="animal">
                                        <input type="button" name="name" value="comedy">
                                        <input type="button" name="name" value="food">
                                        <input type="button" name="name" value="news">
                                    </form>
                                    <br>
                                    <!-- POST -->
                                    <div>
                                        <form action="/user/post/add" method="post">
                                            <input type="text" name="imageURL" style="width: 291px"
                                                placeholder="Please insert ImageURL">
                                            <br>
                                            <input type="text" name="title" style="width: 291px"
                                                placeholder="Please insert Title">
                                            <br>
                                            <textarea name="content" cols="40" rows="5"
                                                placeholder="Please insert Description"></textarea>
                                            <br>
                                            <select name="tag">
                                                <option value="animal">Animal</option>
                                                <option value="comedy">Comedy</option>
                                                <option value="food">Food</option>
                                                <option value="news">News</option>
                                            </select>
                                            <br>
                                            <input type="submit" value="Post">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Post -->
        <% post.forEach(x=> { %>
            <div class="container mt-5 mb-5">
                <div class="row d-flex align-items-center justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="d-flex justify-content-between p-2 px-3">
                                <div class="d-flex flex-row align-items-center"> <img src=" " width="50"
                                        class="rounded-circle">
                                    <div class="d-flex flex-column ml-2">
                                        <span class="font-weight-bold">
                                            <%= x.title %>
                                        </span>
                                        <small class="text-primary"><%= x.Tag.name %> </small>
                                    </div>
                                </div>
                                <div class="d-flex flex-row mt-1 ellipsis">
                                    <small class="mr-2">20 mins</small>
                                    <i class="fa fa-ellipsis-h"></i>
                                </div>
                            </div>
                            <img src="<%= x.imageURL %>" class="img-fluid">
                            <div class="p-2">
                                <hr>
                                <p class="text-justify">
                                    <%= x.content %>
                                </p>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-row icons d-flex align-items-center">
                                        <i class="fa fa-heart"></i> <i class="fa fa-smile-o ml-2"></i>
                                    </div>
                                    <div class="d-flex flex-row muted-color">
                                        <% if (user.role !=='admin' ) { %>
                                            <a href="/user/post/likes" class="btn btn-primary">Like</a>
                                            <% } else {%>
                                                <a href="/user/post/likes" class="btn btn-primary">Like</a>
                                                <a href="/user/post/delete" class="btn btn-danger">Delete</a>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% }) %>

                <div>

                </div>

                </div>
</body>

</html>